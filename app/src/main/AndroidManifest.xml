<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Semana02">
        <activity
            android:name=".Vistas.Inicio"
            android:exported="false"
            android:label="@string/title_activity_inicio"
            android:theme="@style/Theme.Semana02" />
        <activity
            android:name=".Vistas.RecuperarPassword"
            android:exported="false"
            android:label="@string/title_activity_recuperar_password"
            android:theme="@style/Theme.Semana02" />
        <activity
            android:name=".Vistas.RegistroUser"
            android:exported="false"
            android:label="@string/title_activity_registro_user"
            android:theme="@style/Theme.Semana02" />
        <activity
            android:name=".Vistas.Login"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Semana02" />
        <activity
            android:name=".ui.theme.RegistroUsuario"
            android:exported="false"
            android:label="@string/title_activity_registro_usuario"
            android:theme="@style/Theme.Semana02" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Semana02">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>